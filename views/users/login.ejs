<% layout('layouts/boilerplate') %>


    <form action="/login" class="needs-validation" method="post" novalidate>
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow-lg p-3 mb-5 bg-body rounded">
                <img src="https://images.unsplash.com/photo-1509822929063-6b6cfc9b42f2?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80"
                    class="card-img-top" alt="">
                <div class="card-body">
                    <h4 class="card-title">Login</h4>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username" name="username" autofocus required>
                        <div class="invalid-feedback">
                            Username cannot be empty.
                        </div>
                        <div class="valid-feedback">Looks Good!!</div>
                    </div>
                    <div class="mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                        <div class="invalid-feedback">
                            Password cannot be empty.
                        </div>
                        <div class="valid-feedback">Looks Good!!</div>
                    </div>
                    <button class="btn btn-md btn-warning col-3 offset-0">Login</button>
                    <a href="/register" class="btn btn-success col-3 offset-0 ">Register</a>
                </div>
            </div>
        </div>

    </form>